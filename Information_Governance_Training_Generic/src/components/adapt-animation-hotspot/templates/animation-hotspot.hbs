{{! Maintainers - Kunj B Sharma}}
<div class="animation-hotspot-inner component-inner" role="region" aria-label="{{_globals._components._animation-hotspot.ariaRegion}}" {{#if _globals._components._animation-hotspot.ariaRegion}}tabindex="0"{{/if}}>
    {{> component this}}
    <div class="animation-hotspot-widget component-widget">
        <div class="animation-hotspot-widget-container">
            <div class="animation-hotspot-item-holder">
                {{! Images }}
                <div class="animation-hotspot-item">{{#each _items}}<a class="hotspot" type="button" role="button" tabindex="0" href="javascript:void(0);"><img src="{{_graphic._src}}" alt="{{_graphic.alt}}" title="{{{_graphic.alt}}}"/></a>{{/each}}</div>
                {{! Hotspot highlight images (optional) }}
                <div class="animation-hotspot-highlight">
                    {{#each _items}}
                        {{#if _graphic._highlight}}<img src="{{_graphic._highlight}}" alt="" title="" tabindex="-1" aria-hidden="true"/>{{/if}}
                    {{/each}}
                </div>
                {{! Hotspots }}
                <div class="animation-hotspot-hotspot">
                    {{#each _hotspots}}
                        <div class="hotspot" style="top:{{_top}};left:{{_left}};width:{{_width}};height:{{_height}}; {{#if _borderRadius}} border-radius: {{_borderRadius}};{{/if}} " tabindex="0" aria-label="{{label}}" role="button"></div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>